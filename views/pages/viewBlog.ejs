<!DOCTYPE html>
<html dir="ltr" lang="en">
<%- include('../layout/headSection')-%>
    <body>
        <div id="main-wrapper">
            <%- include('../layout/Header')-%>
                <%- include('../layout/sidebar')-%>
                    <div class="page-wrapper">
                        <div class="page-breadcrumb">
                            <div class="row">
                                <div class="col-12 d-flex no-block align-items-center">
                                    <h4 class="page-title">view Blog</h4>
                                    <div class="ml-auto text-right">
                                        <nav aria-label="breadcrumb">
                                            <ol class="breadcrumb">
                                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                                            </ol>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="container-fluid">
                            <div class="card">
                                <table class="table">
                                    <thead>
                                      <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Blog Title</th>
                                        <th scope="col">Blog Category</th>
                                        <th scope="col">Blog Auther</th>
                                        <th scope="col">Blog Content</th>
                                        <th scope="col">Blog Date</th>
                                        <th scope="col">Blog Desc</th>
                                        <th scope="col">Blog Image</th>
                                        <th scope="col">Action</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <%
                                    
                                            blog.forEach((ele,index)=>{
                                        %>
                                        <tr>
                                            <td><%= index+1%></td>
                                            <td><%= ele.blog_title%></td>
                                            <td><%= ele.blog_category%></td>
                                            <td><%= ele.blog_auther%></td>
                                            <td><%= ele.blog_content%></td>
                                            <td><%= ele.blog_date%></td>
                                            <td><%= ele.blog_desc%></td>
                                            <td><img src="/profile/<%=ele.blog_image%>" alt="" height="50" width="50"></td>
                                            <td>
                                                <a href="/api/blog/<%=ele._id%>" class="btn btn-outline-danger">delete</a>
                                                <a href="/updateBlog?id=<%=ele._id%>" class="btn btn-outline-warning">update</a>
                                            </td>
                                        </tr>
                                          <%  }) %>
                                    </tbody>
                              </table>
                            </div>
                            <footer class="footer text-center">All Rights Reserved by Matrix-admin. Designed and
                                Developed by <a href="https://wrappixel.com">WrapPixel</a>.</footer>
                        </div>
                    </div>
<%- include('../layout/navslink')-%>
</body>
</html>